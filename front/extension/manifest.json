{
    "manifest_version": 3,
    "name": "유튜브 영상 캡쳐",
    "version": "1.0",
    "description": "유튜브 동영상을 캡쳐하는 크롬 익스텐션",
    "permissions": [
        "activeTab",
        "scripting",
        "downloads",
        "storage",
        "clipboardWrite",
        "clipboardRead"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/16.png",
            "48": "images/48.png",
            "128": "images/128.png"
        }
    },
    "background": {
        "service_worker": "service-worker.js"
    },
    "commands": {
        "capture-youtube-video": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
            "description": "유튜브 영상 캡쳐하기"
        }
    }
}